<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginBottom="1px"
	android:background="@color/white"
	android:gravity="center_vertical"
	android:orientation="horizontal"
	android:padding="5dp">
	
	<ImageView
		android:id="@+id/item_chat_friend_avatar"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:background="@color/gray_low"
		android:contentDescription="@string/chat_user_avatar" />
	
	<TextView
		android:id="@+id/item_chat_friend_name"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:ellipsize="end"
		android:gravity="center_vertical"
		android:paddingStart="10dp"
		android:paddingEnd="10dp"
		android:singleLine="true"
		android:textColor="@color/black"
		android:textSize="@dimen/item_message_text_size_small"
		tools:text="好友XXX" />
	
	<TextView
		android:id="@+id/item_chat_friend_state"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="10dp"
		android:layout_marginEnd="10dp"
		android:background="@color/gray"
		android:gravity="center"
		android:padding="2dp"
		android:text="@string/chat_user_state_offline"
		android:textColor="@color/white"
		android:textSize="12sp"
		tools:text="离线" />

</LinearLayout>