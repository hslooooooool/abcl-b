<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="150dp"
	android:layout_height="wrap_content"
	android:orientation="vertical">
	
	<TextView
		android:id="@+id/item_message_link_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:ellipsize="end"
		android:singleLine="true"
		android:textColor="@color/black"
		android:textSize="16sp"
		tools:text="链接标题测试测试测试" />
	
	<TextView
		android:id="@+id/item_message_link_desc"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:ellipsize="end"
		android:maxLines="2"
		android:textColor="@color/gray"
		android:textSize="12sp"
		tools:text="链接描述测试测试测试测试测试测试测试测试测试测试测试测试测试" />
	
	<TextView
		android:id="@+id/item_message_link_url"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:autoLink="all"
		android:ellipsize="end"
		android:singleLine="true"
		android:textColor="@color/gray"
		android:textSize="12sp"
		tools:text="http://www.baidu.com/index.html" />
</LinearLayout>