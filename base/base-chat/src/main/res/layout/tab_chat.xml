<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:minHeight="@dimen/tab_chat_height"
	android:orientation="vertical">
	
	<ImageView
		android:id="@+id/tab_chat_icon"
		android:layout_width="@dimen/tab_chat_icon"
		android:layout_height="@dimen/tab_chat_icon"
		android:layout_margin="5dp"
		android:scaleType="centerInside"
		tools:srcCompat="@drawable/ic_launcher" />
	
	<TextView
		android:id="@+id/tab_chat_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:textSize="@dimen/item_message_text_size_smaller"
		tools:text="TAB" />
</LinearLayout>