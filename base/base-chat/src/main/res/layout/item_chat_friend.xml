<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_chat_friend_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/gray"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/item_message_padding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_chat_friend_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:padding="@dimen/item_message_padding"
        android:singleLine="true"
        android:textColor="@color/gray"
        android:textSize="@dimen/item_message_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_chat_friend_avatar"
        app:layout_constraintTop_toTopOf="@id/item_chat_friend_avatar"
        tools:text="好友XXX" />

</androidx.constraintlayout.widget.ConstraintLayout>