<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_gravity="center"
	android:gravity="center_vertical"
	android:orientation="horizontal">
	
	<ImageView
		android:id="@+id/item_message_audio_state"
		android:layout_width="32dp"
		android:layout_height="32dp"
		android:padding="@dimen/item_message_padding"
		android:scaleType="centerInside"
		app:srcCompat="@drawable/icon_play" />
	
	<TextView
		android:id="@+id/item_message_audio_time"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:minWidth="@dimen/item_message_min_width"
		android:minHeight="@dimen/item_message_min_height"
		android:padding="@dimen/item_message_padding"
		android:textColor="@color/chat_text"
		android:textSize="@dimen/item_message_text_size"
		tools:ignore="SmallSp"
		tools:text="5`" />

</LinearLayout>