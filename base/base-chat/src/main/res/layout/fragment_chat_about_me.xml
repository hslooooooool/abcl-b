<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	
	<ImageView
		android:id="@+id/chat_about_me_avatar"
		android:layout_width="80dp"
		android:layout_height="80dp"
		android:layout_margin="20dp"
		android:background="@color/colorPrimary"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
	
	<TextView
		android:id="@+id/chat_about_me_name"
		android:layout_width="0dp"
		android:layout_height="80dp"
		android:layout_margin="20dp"
		android:gravity="center"
		android:textColor="@color/colorPrimary"
		android:textSize="20sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@id/chat_about_me_avatar"
		app:layout_constraintTop_toTopOf="parent"
		tools:text="测试用户姓名" />
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintTop_toBottomOf="@id/chat_about_me_avatar">
		
		<TextView
			android:id="@+id/chat_about_me_desc"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="20dp"
			android:textColor="@color/gray"
			android:textSize="14sp"
			tools:text="测试性别" />
	</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>