<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="10dp">
	
	<ImageView
		android:id="@+id/item_message_user_avatar"
		android:layout_width="50dp"
		android:layout_height="0dp"
		android:background="@color/gray"
		android:contentDescription="@string/app_name"
		app:layout_constraintDimensionRatio="1:1"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
	
	<TextView
		android:id="@+id/item_message_user_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingStart="10dp"
		android:paddingTop="3dp"
		android:paddingEnd="10dp"
		android:paddingBottom="3dp"
		android:textColor="@color/black_light"
		android:textSize="12sp"
		app:layout_constraintStart_toEndOf="@id/item_message_user_avatar"
		app:layout_constraintTop_toTopOf="@id/item_message_user_avatar"
		tools:text="用户姓名" />
	
	<FrameLayout
		android:id="@+id/item_message_content"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@color/gray_low"
		android:minWidth="50dp"
		android:minHeight="50dp"
		app:layout_constraintLeft_toRightOf="@id/item_message_user_avatar"
		app:layout_constraintTop_toBottomOf="@id/item_message_user_name">
		
		<include layout="@layout/item_message_items" />
	
	</FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>